# 報表名稱設定
REPORT_TITLE=MySQL Audit Log Security Analysis Report
COMPANY_NAME=

# 報表資料來源設定
LOG_BASE_PATH=/var/log/mysql/audit
LOG_FILE_PREFIX=server_audit.log
OUTPUT_DIR=/tmp/mysql_reports

# 分析條件設定
## 失敗登入次數警戒值
FAILED_LOGIN_THRESHOLD=3
SUSPICIOUS_IPS=192.168.1.100,10.0.0.0/24
ALLOWED_IPS=10.199.36.0/24,

## 非上班時段監控帳號（帳號間逗號分隔）
AFTER_HOURS_USERS=root
## 上班起始小時
WORK_HOUR_START=8
## 下班小時
WORK_HOUR_END=20
## 定義特權帳號
PRIVILEGED_USERS=root


# 是否產檔
GENERATE_PDF=true
GENERATE_CSV=false

# 定義特權命令
PRIVILEGED_KEYWORDS=CREATE USER,DROP USER,GRANT,REVOKE,CREATE DATABASE,DROP DATABASE,CREATE TABLE,DROP TABLE,ALTER USER,SET PASSWORD


# 信箱設定
SEND_EMAIL=false
SMTP_HOST=
SMTP_PORT=25
SMTP_USER=
SMTP_PASSWORD=
MAIL_FROM=
MAIL_TO=
MAIL_SUBJECT=MySQL Audit Log Security Report

# 資料庫設定
MYSQL_HOST=
MYSQL_PORT=3306
MYSQL_USER=audit_user
MYSQL_PASSWORD=
MYSQL_DB=auditdb
