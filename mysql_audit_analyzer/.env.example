# MySQL 資料庫連線設定
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_password
MYSQL_DB=auditdb

# 日誌檔案路徑設定
LOG_BASE_PATH=/var/log/mysql/audit
LOG_FILE_PREFIX=server_audit.log
OUTPUT_DIR=/tmp/mysql_reports
TEMP_DIR=/tmp

# 資料庫連線池設定 (新增)
DB_POOL_SIZE=5                    # 連線池基本大小
DB_MAX_OVERFLOW=10                # 連線池最大溢位
DB_POOL_TIMEOUT=30                # 連線池超時 (秒)
DB_QUERY_TIMEOUT=300              # 查詢超時 (秒)

# 查詢優化和記憶體管理設定 (新增)
MAX_FETCH_SIZE=100000             # 單次查詢最大結果數量
BATCH_FETCH_SIZE=10000            # 批次處理大小
QUERY_RETRY_COUNT=3               # 查詢重試次數
RETRY_DELAY=1.0                   # 重試延遲 (秒)

# 資源監控和限制設定 (新增)
MAX_MEMORY_USAGE_MB=1024          # 最大記憶體使用量 (MB)
QUERY_THROTTLE_DELAY=0.1          # 查詢節流延遲 (秒)
ENABLE_RESOURCE_MONITORING=true   # 啟用資源監控
MAX_CONCURRENT_QUERIES=3          # 最大並行查詢數

# 安全分析設定
FAILED_LOGIN_THRESHOLD=5
WORK_HOUR_START=9
WORK_HOUR_END=18

# 允許的 IP 地址 (白名單，逗號分隔)
ALLOWED_IPS=127.0.0.1,192.168.1.100,10.0.0.10

# 特權使用者帳號 (逗號分隔)
PRIVILEGED_USERS=admin,root,backup_user

# 非上班時間監控的帳號 (逗號分隔)
AFTER_HOURS_USERS=admin,maintenance_user

# 特權操作關鍵字 (逗號分隔)
PRIVILEGED_KEYWORDS=CREATE USER,DROP USER,GRANT,REVOKE,CREATE DATABASE,DROP DATABASE,CREATE TABLE,DROP TABLE,ALTER USER,SET PASSWORD

# 報表產生設定
GENERATE_PDF=true
GENERATE_CSV=true
REPORT_TITLE=MySQL Audit Log Security Analysis Report
COMPANY_NAME=Your Company

# 郵件寄送設定
SEND_EMAIL=false
SMTP_SERVER=smtp.your-domain.com
SMTP_PORT=25
MAIL_FROM=audit@your-domain.com
MAIL_TO=admin@your-domain.com,security@your-domain.com

# 資料匯入優化設定
USE_LOAD_DATA_INFILE=true         # 使用 LOAD DATA INFILE 優化
